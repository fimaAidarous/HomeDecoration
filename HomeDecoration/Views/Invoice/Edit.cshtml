@model HomeDecoration.Models.DTO.Invoice

<h2>Edit Invoice</h2>

<form asp-action="Edit">
    <h3>Payment Details</h3>
    <div class="form-group">
        <label asp-for="Payment.Amount" class="control-label">Amount</label>
        <input type="text" asp-for="Payment.Amount" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Payment.Remainder" class="control-label">Remainder</label>
        <input type="text" asp-for="Payment.Remainder" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Payment.Payment_Type" class="control-label">Payment Type</label>
        <input type="text" asp-for="Payment.Payment_Type" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Payment.Discount" class="control-label">Discount</label>
        <input type="text" asp-for="Payment.Discount" class="form-control" />
    </div>

    <input type="submit" value="Save" class="btn btn-info" />
</form>