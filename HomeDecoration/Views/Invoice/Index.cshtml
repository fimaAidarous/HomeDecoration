@model IEnumerable<HomeDecoration.Models.DTO.Invoice>

@{
    ViewData["Title"] = "Index";
}

<h1>Invoices List</h1>

<p>
    <a asp-action="Create" class="accordion-button-btn-dark btn btn-info">Create New</a>
</p>
<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Total_Amount).ToUpper()
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment_Status).ToUpper()
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Total_Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Payment_Status)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-info mr-2 mt-2" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Delete" class="btn btn-danger mr-2 mt-2 " asp-route-id="@item.Id">Delete</a>
                    <a asp-action="Details" class="btn btn-success mr-2 mt-2" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
